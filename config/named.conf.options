acl "mi-xarxa" {
    172.16.8.0/26;
    127.0.0.0/8;
};

options {
    directory "/var/cache/bind";

    // IMPORTANTE: Permitir consultas de cualquiera
    allow-query { any; };

    // Permitir recursi√≥n (para resolver google.com) desde cualquiera
    recursion yes;
    allow-recursion { any; };

    // Escuchar en todas las interfaces
    listen-on { any; };
    listen-on-v6 { any; };

    // Para que no se queje de DNSSEC si no lo usas
    dnssec-validation no;
};
